.mb-16 {
  margin-bottom: 32rpx;
}
.input-example {
  --td-input-vertical-padding: 24rpx;
  background-color: var(--bg-color-demo);
  padding: 32rpx 32rpx 16rpx;
}

.input-example__label {
  color: var(--td-text-color-primary);
  font-size: 24rpx;
  line-height: 40rpx;
  margin: 0 8rpx 16rpx;
}
.button-example {
  margin: 0 32rpx;
}
.block {
  width: 100vw;
  height: 240px;
  background: var(--td-bg-color-container);
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.wrapper {
  margin: 32rpx;
  display: block;
}

.header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
  color: var(--td-text-color-primary);
}

.btn {
  font-size: 32rpx;
  padding: 32rpx;
}

.btn--cancel {
  color: var(--td-text-color-secondary);
}

.btn--confirm {
  color: #0052d9;
}
