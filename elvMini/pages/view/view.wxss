/* Style for the table */
table {
  border-collapse: collapse;
  width: 100%;
}

/* Style for table header cells */
th {
  background-color: #f2f2f2;
  text-align: center;
  padding: 10px;
}

/* Style for table body cells */
td {
  text-align: center;
  padding: 10px;
}

/* Alternate row background color */
tr:nth-child(even) {
  background-color: #f9f9f9;
}

/* Hover effect for rows */
tr:hover {
  background-color: #e9e9e9;
}
