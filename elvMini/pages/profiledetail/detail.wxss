/* pages/profiledetail/detail.wxss */
.profileDetailContainer {
  padding: 20rpx;
}

.profileHeader {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.profileImageContainer {
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.profileImage {
  width: 100%;
  height: 100%;
}

.profileName {
  font-size: 20rpx;
  font-weight: bold;
}

.detailRow {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.label {
  font-weight: bold;
  color: #333;
}

.value {
  color: #666;
}
